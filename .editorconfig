# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{md,yml,yaml,html,css,scss,js,cff,rst}]
indent_size = 2

# ignore python files
[*.{py,tsv}]
indent_style = unset

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
indent_style = unset
insert_final_newline = false

[Makefile]
indent_style = unset

# Ignore paths
[tests/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# Ignore paths for .ipynb files
[*.ipynb]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
